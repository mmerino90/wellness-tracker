<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.chart.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>

<!-- Analytics & Visualization View -->
<BorderPane xmlns="http://javafx.com/javafx" 
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.wellnesstracker.javafx.AnalyticsView"
            style="-fx-background-color: #f5f5f5;">
    
    <!-- Top navigation bar -->
    <top>
        <HBox spacing="10" style="-fx-padding: 15; -fx-background-color: #fff; -fx-border-color: #ddd; -fx-border-width: 0 0 1 0;">
            <Button text="&lt; Back" onAction="#handleBack" 
                    style="-fx-font-size: 12; -fx-padding: 8 15;"/>
            <Label text="Analytics &amp; Insights" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <ComboBox fx:id="timeRangeCombo" prefWidth="150" 
                      style="-fx-font-size: 12;">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Last 7 days"/>
                        <String fx:value="Last 30 days"/>
                        <String fx:value="Last 90 days"/>
                        <String fx:value="All time"/>
                    </FXCollections>
                </items>
            </ComboBox>
            <Button text="Refresh" onAction="#handleRefresh" 
                    style="-fx-font-size: 12; -fx-padding: 8 15;"/>
        </HBox>
    </top>
    
    <!-- Main content area -->
    <center>
        <ScrollPane style="-fx-padding: 0; -fx-background: transparent;">
            <content>
                <VBox spacing="20" style="-fx-padding: 20;">
                    
                    <!-- Overview Cards -->
                    <VBox spacing="10" style="-fx-border-color: #ddd; -fx-border-width: 1; 
                                              -fx-padding: 20; -fx-background-color: white;
                                              -fx-border-radius: 8;">
                        <Label text="Overview" 
                               style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                        
                        <GridPane hgap="20" vgap="10">
                            <!-- Total Mood Entries -->
                            <VBox spacing="5" style="-fx-padding: 15; -fx-background-color: #e8f4f8; -fx-border-radius: 5;">
                                <Label text="Total Mood Entries" style="-fx-font-size: 12; -fx-text-fill: #7f8c8d;"/>
                                <Label fx:id="totalMoodEntriesLabel" text="0" 
                                       style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #3498db;"/>
                                <GridPane.setColumnIndex>0</GridPane.setColumnIndex>
                                <GridPane.setRowIndex>0</GridPane.setRowIndex>
                            </VBox>
                            
                            <!-- Average Mood Score -->
                            <VBox spacing="5" style="-fx-padding: 15; -fx-background-color: #f0f5e9; -fx-border-radius: 5;">
                                <Label text="Average Mood Score" style="-fx-font-size: 12; -fx-text-fill: #7f8c8d;"/>
                                <Label fx:id="averageMoodLabel" text="0.0" 
                                       style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
                                <GridPane.setColumnIndex>1</GridPane.setColumnIndex>
                                <GridPane.setRowIndex>0</GridPane.setRowIndex>
                            </VBox>
                            
                            <!-- Highest Mood -->
                            <VBox spacing="5" style="-fx-padding: 15; -fx-background-color: #fef5e7; -fx-border-radius: 5;">
                                <Label text="Highest Mood" style="-fx-font-size: 12; -fx-text-fill: #7f8c8d;"/>
                                <Label fx:id="highestMoodLabel" text="0" 
                                       style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #f39c12;"/>
                                <GridPane.setColumnIndex>2</GridPane.setColumnIndex>
                                <GridPane.setRowIndex>0</GridPane.setRowIndex>
                            </VBox>
                            
                            <!-- Lowest Mood -->
                            <VBox spacing="5" style="-fx-padding: 15; -fx-background-color: #fce4ec; -fx-border-radius: 5;">
                                <Label text="Lowest Mood" style="-fx-font-size: 12; -fx-text-fill: #7f8c8d;"/>
                                <Label fx:id="lowestMoodLabel" text="0" 
                                       style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #e91e63;"/>
                                <GridPane.setColumnIndex>3</GridPane.setColumnIndex>
                                <GridPane.setRowIndex>0</GridPane.setRowIndex>
                            </VBox>
                        </GridPane>
                    </VBox>
                    
                    <!-- Mood Distribution Chart -->
                    <VBox spacing="10" style="-fx-border-color: #ddd; -fx-border-width: 1; 
                                              -fx-padding: 20; -fx-background-color: white;
                                              -fx-border-radius: 8;">
                        <Label text="Mood Distribution" 
                               style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                        <PieChart fx:id="moodDistributionChart" 
                                  prefHeight="300" prefWidth="400"
                                  animated="true" style="-fx-font-size: 11;"/>
                    </VBox>
                    
                    <!-- Mood Trends Chart -->
                    <VBox spacing="10" style="-fx-border-color: #ddd; -fx-border-width: 1; 
                                              -fx-padding: 20; -fx-background-color: white;
                                              -fx-border-radius: 8;">
                        <Label text="Mood Trends Over Time" 
                               style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                        <LineChart fx:id="moodTrendsChart" 
                                   prefHeight="350" prefWidth="600"
                                   animated="true" style="-fx-font-size: 11;">
                            <xAxis>
                                <CategoryAxis side="BOTTOM" label="Date"/>
                            </xAxis>
                            <yAxis>
                                <NumberAxis side="LEFT" label="Mood Level" lowerBound="0" upperBound="10" tickUnit="1"/>
                            </yAxis>
                        </LineChart>
                    </VBox>
                    
                    <!-- Habit Completion Stats -->
                    <VBox spacing="10" style="-fx-border-color: #ddd; -fx-border-width: 1; 
                                              -fx-padding: 20; -fx-background-color: white;
                                              -fx-border-radius: 8;">
                        <Label text="Habit Completion Rates" 
                               style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                        <BarChart fx:id="habitCompletionChart" 
                                  prefHeight="350" prefWidth="600"
                                  animated="true" style="-fx-font-size: 11;">
                            <xAxis>
                                <CategoryAxis side="BOTTOM" label="Habit"/>
                            </xAxis>
                            <yAxis>
                                <NumberAxis side="LEFT" label="Completion Rate (%)" lowerBound="0" upperBound="100" tickUnit="10"/>
                            </yAxis>
                        </BarChart>
                    </VBox>
                    
                    <!-- Energy Level Distribution -->
                    <VBox spacing="10" style="-fx-border-color: #ddd; -fx-border-width: 1; 
                                              -fx-padding: 20; -fx-background-color: white;
                                              -fx-border-radius: 8;">
                        <Label text="Energy Level Distribution" 
                               style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                        <BarChart fx:id="energyLevelChart" 
                                  prefHeight="300" prefWidth="600"
                                  animated="true" style="-fx-font-size: 11;">
                            <xAxis>
                                <CategoryAxis side="BOTTOM" label="Energy Level"/>
                            </xAxis>
                            <yAxis>
                                <NumberAxis side="LEFT" label="Frequency"/>
                            </yAxis>
                        </BarChart>
                    </VBox>
                    
                    <!-- Emotional Context Analysis -->
                    <VBox spacing="10" style="-fx-border-color: #ddd; -fx-border-width: 1; 
                                              -fx-padding: 20; -fx-background-color: white;
                                              -fx-border-radius: 8;">
                        <Label text="Emotional Context Analysis" 
                               style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                        <BarChart fx:id="emotionChart" 
                                  prefHeight="300" prefWidth="600"
                                  animated="true" style="-fx-font-size: 11;">
                            <xAxis>
                                <CategoryAxis side="BOTTOM" label="Emotion"/>
                            </xAxis>
                            <yAxis>
                                <NumberAxis side="LEFT" label="Occurrences"/>
                            </yAxis>
                        </BarChart>
                    </VBox>
                    
                </VBox>
            </content>
        </ScrollPane>
    </center>
    
</BorderPane>
