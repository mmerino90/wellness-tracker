<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<!-- User Registration Screen -->
<BorderPane xmlns="http://javafx.com/javafx" 
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.wellnesstracker.javafx.RegisterView"
            style="-fx-background-color: #f5f5f5;">
    
    <!-- Center content with registration form -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;">
            <VBox spacing="20" style="-fx-padding: 40; -fx-alignment: top_center;">
                
                <!-- Title -->
                <Label text="Create Your Wellness Account" 
                       style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"
                       VBox.vgrow="NEVER"/>
                
                <!-- Subtitle -->
                <Label text="Join the wellness community and start tracking your health journey"
                       style="-fx-font-size: 14; -fx-text-fill: #7f8c8d;"
                       VBox.vgrow="NEVER"/>
            
            <!-- Form Container -->
            <VBox spacing="15" style="-fx-border-color: #ddd; -fx-border-width: 1; 
                                      -fx-padding: 30; -fx-background-color: white;
                                      -fx-border-radius: 8;">
                
                <!-- Username Field -->
                <VBox spacing="5">
                    <Label text="Username" style="-fx-font-weight: bold; -fx-font-size: 12;"/>
                    <TextField fx:id="usernameField" 
                               promptText="Enter username (3-50 characters)"
                               style="-fx-padding: 10; -fx-font-size: 13;"/>
                    <Label fx:id="usernameError" text="" 
                           style="-fx-text-fill: #e74c3c; -fx-font-size: 11;"/>
                </VBox>
                
                <!-- Email Field -->
                <VBox spacing="5">
                    <Label text="Email Address" style="-fx-font-weight: bold; -fx-font-size: 12;"/>
                    <TextField fx:id="emailField" 
                               promptText="Enter your email address"
                               style="-fx-padding: 10; -fx-font-size: 13;"/>
                    <Label fx:id="emailError" text="" 
                           style="-fx-text-fill: #e74c3c; -fx-font-size: 11;"/>
                </VBox>
                
                <!-- First Name Field -->
                <HBox spacing="15">
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="First Name" style="-fx-font-weight: bold; -fx-font-size: 12;"/>
                        <TextField fx:id="firstNameField" 
                                   promptText="First name"
                                   style="-fx-padding: 10; -fx-font-size: 13;"/>
                    </VBox>
                    
                    <!-- Last Name Field -->
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="Last Name" style="-fx-font-weight: bold; -fx-font-size: 12;"/>
                        <TextField fx:id="lastNameField" 
                                   promptText="Last name"
                                   style="-fx-padding: 10; -fx-font-size: 13;"/>
                    </VBox>
                </HBox>
                
                <!-- Password Field -->
                <VBox spacing="5">
                    <Label text="Password" style="-fx-font-weight: bold; -fx-font-size: 12;"/>
                    <PasswordField fx:id="passwordField" 
                                   promptText="Enter password (minimum 6 characters)"
                                   style="-fx-padding: 10; -fx-font-size: 13;"/>
                    <Label fx:id="passwordError" text="" 
                           style="-fx-text-fill: #e74c3c; -fx-font-size: 11;"/>
                </VBox>
                
                <!-- Confirm Password Field -->
                <VBox spacing="5">
                    <Label text="Confirm Password" style="-fx-font-weight: bold; -fx-font-size: 12;"/>
                    <PasswordField fx:id="confirmPasswordField" 
                                   promptText="Re-enter your password"
                                   style="-fx-padding: 10; -fx-font-size: 13;"/>
                    <Label fx:id="confirmError" text="" 
                           style="-fx-text-fill: #e74c3c; -fx-font-size: 11;"/>
                </VBox>
                
                <!-- Password Strength Indicator -->
                <ProgressBar fx:id="passwordStrengthBar" progress="0" prefHeight="6"
                             style="-fx-accent: #e74c3c;"/>
                <Label fx:id="passwordStrengthLabel" text="Password Strength: Weak"
                       style="-fx-font-size: 11; -fx-text-fill: #e74c3c;"/>
                
                <!-- Terms and Conditions -->
                <HBox spacing="10">
                    <CheckBox fx:id="termsCheckBox" text="I agree to the Terms and Conditions"/>
                    <Region HBox.hgrow="ALWAYS"/>
                </HBox>
                
                <!-- Error/Success Message -->
                <Label fx:id="errorLabel" text="" 
                       style="-fx-text-fill: #e74c3c; -fx-font-size: 12; -fx-wrap-text: true;"/>
                
                <!-- Buttons -->
                <HBox spacing="10" VBox.vgrow="NEVER">
                    <!-- Register Button -->
                    <Button fx:id="registerButton" 
                            text="Create Account" 
                            prefHeight="45" 
                            prefWidth="200"
                            onAction="#handleRegister"
                            style="-fx-font-size: 14; -fx-font-weight: bold; -fx-background-color: #27ae60; -fx-text-fill: white; -fx-cursor: hand;"/>
                    
                    <!-- Cancel Button -->
                    <Button fx:id="cancelButton" 
                            text="Back to Login" 
                            prefHeight="45" 
                            prefWidth="200"
                            onAction="#handleCancel"
                            style="-fx-font-size: 14; -fx-background-color: #95a5a6; -fx-text-fill: white; -fx-cursor: hand;"/>
                </HBox>
                
                <!-- Login Link -->
                <HBox spacing="5" style="-fx-alignment: center;">
                    <Label text="Already have an account?"/>
                    <Hyperlink fx:id="loginLink" 
                               text="Sign In"
                               onAction="#handleLoginLink"
                               style="-fx-font-size: 12; -fx-text-fill: #3498db;"/>
                </HBox>
            </VBox>
            </VBox>
        </ScrollPane>
    </center>
    
</BorderPane>
