<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>

<!-- Mood Tracking View -->
<BorderPane xmlns="http://javafx.com/javafx" 
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.wellnesstracker.javafx.MoodTrackerView"
            style="-fx-background-color: #f5f5f5;">
    
    <!-- Top navigation bar -->
    <top>
        <HBox spacing="10" style="-fx-padding: 15; -fx-background-color: #fff; -fx-border-color: #ddd; -fx-border-width: 0 0 1 0;">
            <Button text="â† Back" onAction="#handleBack" 
                    style="-fx-font-size: 12; -fx-padding: 8 15;"/>
            <Label text="Mood Tracker" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="dateLabel" text="" style="-fx-font-size: 12; -fx-text-fill: #7f8c8d;"/>
        </HBox>
    </top>
    
    <!-- Main content area -->
    <center>
        <ScrollPane style="-fx-padding: 0; -fx-background: transparent;">
            <content>
                <VBox spacing="20" style="-fx-padding: 20;">
                    
                    <!-- Current Mood Section -->
                    <VBox spacing="15" style="-fx-border-color: #ddd; -fx-border-width: 1; 
                                              -fx-padding: 20; -fx-background-color: white;
                                              -fx-border-radius: 8;">
                        <Label text="How are you feeling?" 
                               style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                        
                        <!-- Mood Level Slider -->
                        <VBox spacing="5">
                            <Label text="Mood Level (1-10)" style="-fx-font-weight: bold;"/>
                            <HBox spacing="10">
                                <Slider fx:id="moodLevelSlider" min="1" max="10" value="5"
                                        prefWidth="300" HBox.hgrow="ALWAYS"
                                        style="-fx-font-size: 12;"/>
                                <Label fx:id="moodValueLabel" text="5" 
                                       style="-fx-font-size: 14; -fx-font-weight: bold; -fx-min-width: 40;"/>
                            </HBox>
                        </VBox>
                        
                        <!-- Mood Label -->
                        <VBox spacing="5">
                            <Label text="Emotional Context" style="-fx-font-weight: bold;"/>
                            <ComboBox fx:id="emotionalContextCombo" prefWidth="300"
                                      style="-fx-font-size: 12;">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="Select an emotion..."/>
                                        <String fx:value="Happy"/>
                                        <String fx:value="Sad"/>
                                        <String fx:value="Anxious"/>
                                        <String fx:value="Calm"/>
                                        <String fx:value="Excited"/>
                                        <String fx:value="Frustrated"/>
                                        <String fx:value="Peaceful"/>
                                        <String fx:value="Stressed"/>
                                        <String fx:value="Motivated"/>
                                        <String fx:value="Tired"/>
                                        <String fx:value="Angry"/>
                                        <String fx:value="Neutral"/>
                                    </FXCollections>
                                </items>
                            </ComboBox>
                        </VBox>
                        
                        <!-- Energy Level -->
                        <VBox spacing="5">
                            <Label text="Energy Level" style="-fx-font-weight: bold;"/>
                            <ComboBox fx:id="energyLevelCombo" prefWidth="300"
                                      style="-fx-font-size: 12;">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="Select energy level..."/>
                                        <String fx:value="Low"/>
                                        <String fx:value="Medium"/>
                                        <String fx:value="High"/>
                                    </FXCollections>
                                </items>
                            </ComboBox>
                        </VBox>
                        
                        <!-- Activities -->
                        <VBox spacing="5">
                            <Label text="Activities" style="-fx-font-weight: bold;"/>
                            <TextArea fx:id="activitiesArea" 
                                      promptText="What activities are you doing? (optional)"
                                      prefRowCount="3" wrapText="true"
                                      style="-fx-font-size: 12; -fx-padding: 8;"/>
                        </VBox>
                        
                        <!-- Notes -->
                        <VBox spacing="5">
                            <Label text="Additional Notes" style="-fx-font-weight: bold;"/>
                            <TextArea fx:id="notesArea" 
                                      promptText="Any additional thoughts or observations... (optional)"
                                      prefRowCount="4" wrapText="true"
                                      style="-fx-font-size: 12; -fx-padding: 8;"/>
                        </VBox>
                        
                        <!-- Save Button -->
                        <HBox spacing="10">
                            <Button fx:id="saveMoodButton" 
                                    text="Save Mood Entry" 
                                    onAction="#handleSaveMood"
                                    prefHeight="40" prefWidth="150"
                                    style="-fx-font-size: 13; -fx-font-weight: bold; 
                                            -fx-background-color: #27ae60; -fx-text-fill: white;"/>
                            <Button fx:id="clearButton" 
                                    text="Clear" 
                                    onAction="#handleClear"
                                    prefHeight="40" prefWidth="100"
                                    style="-fx-font-size: 13; -fx-background-color: #95a5a6; -fx-text-fill: white;"/>
                        </HBox>
                        
                        <!-- Status Message -->
                        <Label fx:id="statusLabel" text="" 
                               style="-fx-text-fill: #27ae60; -fx-font-size: 12;"/>
                    </VBox>
                    
                    <!-- History Section -->
                    <VBox spacing="15" style="-fx-border-color: #ddd; -fx-border-width: 1; 
                                              -fx-padding: 20; -fx-background-color: white;
                                              -fx-border-radius: 8;">
                        <Label text="Mood History" 
                               style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                        
                        <!-- Date Range Selection -->
                        <HBox spacing="10">
                            <Label text="Show last:" style="-fx-font-weight: bold;"/>
                            <ComboBox fx:id="dateRangeCombo" prefWidth="150"
                                      style="-fx-font-size: 12;">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="Last 7 days"/>
                                        <String fx:value="Last 14 days"/>
                                        <String fx:value="Last 30 days"/>
                                        <String fx:value="All entries"/>
                                    </items>
                                </FXCollections>
                            </ComboBox>
                            <Button text="Refresh" onAction="#handleRefreshHistory"
                                    style="-fx-font-size: 11; -fx-padding: 5 15;"/>
                        </HBox>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="Mood History" style="-fx-font-size: 14; -fx-font-weight: bold;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <TextField fx:id="searchField" prefWidth="250"
                                       promptText="Search by emotion or notes..."
                                       style="-fx-padding: 8; -fx-font-size: 12;"/>
                        </HBox>
                        
                        <!-- Mood History Table -->
                        <TableView fx:id="moodHistoryTable" prefHeight="300" 
                                   style="-fx-font-size: 12;">
                            <columns>
                                <TableColumn text="Date" prefWidth="120" fx:id="dateColumn"/>
                                <TableColumn text="Mood" prefWidth="80" fx:id="moodColumn"/>
                                <TableColumn text="Emotion" prefWidth="120" fx:id="emotionColumn"/>
                                <TableColumn text="Energy" prefWidth="80" fx:id="energyColumn"/>
                                <TableColumn text="Notes" prefWidth="250" fx:id="notesColumn"/>
                                <TableColumn text="Actions" prefWidth="80" fx:id="actionsColumn"/>
                            </columns>
                        </TableView>
                    </VBox>
                    
                    <!-- Statistics Section -->
                    <VBox spacing="15" style="-fx-border-color: #ddd; -fx-border-width: 1; 
                                              -fx-padding: 20; -fx-background-color: white;
                                              -fx-border-radius: 8;">
                        <Label text="Mood Statistics" 
                               style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                        
                        <GridPane hgap="20" vgap="10">
                            <!-- Average Mood -->
                            <VBox spacing="5" style="-fx-padding: 15; -fx-background-color: #e8f4f8; -fx-border-radius: 5;">
                                <Label text="Average Mood" style="-fx-font-size: 12; -fx-text-fill: #7f8c8d;"/>
                                <Label fx:id="avgMoodLabel" text="5.0" 
                                       style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #3498db;"/>
                                <GridPane.setColumnIndex>0</GridPane.setColumnIndex>
                                <GridPane.setRowIndex>0</GridPane.setRowIndex>
                            </VBox>
                            
                            <!-- Entry Count -->
                            <VBox spacing="5" style="-fx-padding: 15; -fx-background-color: #f0f5e9; -fx-border-radius: 5;">
                                <Label text="Total Entries" style="-fx-font-size: 12; -fx-text-fill: #7f8c8d;"/>
                                <Label fx:id="entryCountLabel" text="0" 
                                       style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
                                <GridPane.setColumnIndex>1</GridPane.setColumnIndex>
                                <GridPane.setRowIndex>0</GridPane.setRowIndex>
                            </VBox>
                            
                            <!-- Most Common Mood -->
                            <VBox spacing="5" style="-fx-padding: 15; -fx-background-color: #fef5e7; -fx-border-radius: 5;">
                                <Label text="Most Common Mood" style="-fx-font-size: 12; -fx-text-fill: #7f8c8d;"/>
                                <Label fx:id="commonMoodLabel" text="N/A" 
                                       style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #f39c12;"/>
                                <GridPane.setColumnIndex>2</GridPane.setColumnIndex>
                                <GridPane.setRowIndex>0</GridPane.setRowIndex>
                            </VBox>
                        </GridPane>
                    </VBox>
                    
                </VBox>
            </content>
        </ScrollPane>
    </center>
    
</BorderPane>
