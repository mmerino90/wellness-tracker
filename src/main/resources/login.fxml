<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<!-- Login Screen Layout -->
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.wellnesstracker.javafx.LoginView"
            style="-fx-background-color: #f5f5f5;">

    <!-- Center: Login form -->
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 50;">
            <!-- Title -->
            <VBox alignment="CENTER" spacing="10">
                <Label text="Wellness Tracker"
                       style="-fx-font-size: 32; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Label text="Track your wellness journey"
                       style="-fx-font-size: 14; -fx-text-fill: #7f8c8d;"/>
            </VBox>

            <!-- Form Container -->
            <VBox spacing="15" style="-fx-border-color: #ddd; -fx-border-width: 1; -fx-padding: 30; -fx-background-color: white; -fx-border-radius: 5;">
                
                <!-- Username Field -->
                <VBox spacing="5">
                    <Label text="Username" style="-fx-font-size: 12; -fx-font-weight: bold;"/>
                    <TextField fx:id="usernameField"
                               promptText="Enter your username"
                               style="-fx-padding: 10; -fx-font-size: 13; -fx-border-color: #cccccc; -fx-border-radius: 3;"/>
                </VBox>

                <!-- Password Field -->
                <VBox spacing="5">
                    <Label text="Password" style="-fx-font-size: 12; -fx-font-weight: bold;"/>
                    <PasswordField fx:id="passwordField"
                                   promptText="Enter your password"
                                   style="-fx-padding: 10; -fx-font-size: 13; -fx-border-color: #cccccc; -fx-border-radius: 3;"/>
                </VBox>

                <!-- Error Message -->
                <Label fx:id="errorLabel"
                       text=""
                       style="-fx-font-size: 12; -fx-text-fill: #e74c3c; -fx-wrap-text: true;"/>

                <!-- Login Button -->
                <Button fx:id="loginButton"
                        text="Login"
                        onAction="#handleLogin"
                        style="-fx-padding: 12; -fx-font-size: 14; -fx-font-weight: bold; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-radius: 3; -fx-cursor: hand;"/>

                <Separator/>

                <!-- Register Link -->
                <HBox alignment="CENTER" spacing="5">
                    <Label text="Don't have an account?"/>
                    <Button fx:id="registerButton"
                            text="Register here"
                            onAction="#handleRegister"
                            style="-fx-background-color: transparent; -fx-text-fill: #2196F3; -fx-padding: 0; -fx-font-size: 12; -fx-underline: true; -fx-cursor: hand;"/>
                </HBox>
            </VBox>

            <!-- Footer -->
            <Label text="Â© 2024 Wellness Tracker. All rights reserved."
                   style="-fx-font-size: 11; -fx-text-fill: #95a5a6;"/>
        </VBox>
    </center>
</BorderPane>
