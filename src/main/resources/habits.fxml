<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>

<!-- Habit Tracking View -->
<BorderPane xmlns="http://javafx.com/javafx" 
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.wellnesstracker.javafx.HabitView"
            style="-fx-background-color: #f5f5f5;">
    
    <!-- Top navigation bar -->
    <top>
        <HBox spacing="10" style="-fx-padding: 15; -fx-background-color: #fff; -fx-border-color: #ddd; -fx-border-width: 0 0 1 0;">
            <Button text="â† Back" onAction="#handleBack" 
                    style="-fx-font-size: 12; -fx-padding: 8 15;"/>
            <Label text="Habit Tracker" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Add New Habit" onAction="#handleAddNewHabit" 
                    style="-fx-font-size: 12; -fx-padding: 8 15; -fx-background-color: #27ae60; -fx-text-fill: white;"/>
        </HBox>
    </top>
    
    <!-- Main content area -->
    <center>
        <ScrollPane style="-fx-padding: 0; -fx-background: transparent;">
            <content>
                <VBox spacing="20" style="-fx-padding: 20;">
                    
                    <!-- Add New Habit Section -->
                    <VBox spacing="15" style="-fx-border-color: #ddd; -fx-border-width: 1; 
                                              -fx-padding: 20; -fx-background-color: white;
                                              -fx-border-radius: 8;">
                        <Label text="Create New Habit" 
                               style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                        
                        <!-- Habit Name -->
                        <VBox spacing="5">
                            <Label text="Habit Name" style="-fx-font-weight: bold;"/>
                            <TextField fx:id="habitNameField" 
                                       promptText="e.g., Morning Exercise, Read a Book"
                                       style="-fx-padding: 10; -fx-font-size: 13;"/>
                            <Label fx:id="habitNameError" text="" 
                                   style="-fx-text-fill: #e74c3c; -fx-font-size: 11;"/>
                        </VBox>
                        
                        <!-- Habit Description -->
                        <VBox spacing="5">
                            <Label text="Description" style="-fx-font-weight: bold;"/>
                            <TextArea fx:id="habitDescriptionField" 
                                      promptText="Describe your habit (optional)"
                                      prefRowCount="3" wrapText="true"
                                      style="-fx-font-size: 12; -fx-padding: 8;"/>
                        </VBox>
                        
                        <!-- Habit Category and Frequency -->
                        <HBox spacing="20">
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Category" style="-fx-font-weight: bold;"/>
                                <ComboBox fx:id="categoryCombo" prefWidth="150"
                                          style="-fx-font-size: 12;">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="Select category..."/>
                                            <String fx:value="Health"/>
                                            <String fx:value="Fitness"/>
                                            <String fx:value="Learning"/>
                                            <String fx:value="Mindfulness"/>
                                            <String fx:value="Productivity"/>
                                            <String fx:value="Social"/>
                                            <String fx:value="Other"/>
                                        </FXCollections>
                                    </items>
                                </ComboBox>
                            </VBox>
                            
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Frequency" style="-fx-font-weight: bold;"/>
                                <ComboBox fx:id="frequencyCombo" prefWidth="150"
                                          style="-fx-font-size: 12;">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="Daily"/>
                                            <String fx:value="Weekly"/>
                                            <String fx:value="Monthly"/>
                                        </FXCollections>
                                    </items>
                                </ComboBox>
                            </VBox>
                        </HBox>
                        
                        <!-- Buttons -->
                        <HBox spacing="10">
                            <Button fx:id="createHabitButton" 
                                    text="Create Habit" 
                                    onAction="#handleCreateHabit"
                                    prefHeight="40" prefWidth="150"
                                    style="-fx-font-size: 13; -fx-font-weight: bold; 
                                            -fx-background-color: #27ae60; -fx-text-fill: white;"/>
                            <Button fx:id="clearButton" 
                                    text="Clear" 
                                    onAction="#handleClear"
                                    prefHeight="40" prefWidth="100"
                                    style="-fx-font-size: 13; -fx-background-color: #95a5a6; -fx-text-fill: white;"/>
                        </HBox>
                        
                        <!-- Status Message -->
                        <Label fx:id="statusLabel" text="" 
                               style="-fx-text-fill: #27ae60; -fx-font-size: 12;"/>
                    </VBox>
                    
                    <!-- Active Habits Section -->
                    <VBox spacing="15" style="-fx-border-color: #ddd; -fx-border-width: 1; 
                                              -fx-padding: 20; -fx-background-color: white;
                                              -fx-border-radius: 8;">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="Active Habits" 
                                   style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <TextField fx:id="searchField" prefWidth="250"
                                       promptText="Search habits by name or category..."
                                       style="-fx-padding: 8; -fx-font-size: 12;"/>
                        </HBox>
                        
                        <!-- Habits List -->
                        <TableView fx:id="habitsTable" prefHeight="300" 
                                   style="-fx-font-size: 12;">
                            <columns>
                                <TableColumn text="Habit Name" prefWidth="150" fx:id="nameColumn"/>
                                <TableColumn text="Category" prefWidth="100" fx:id="categoryColumn"/>
                                <TableColumn text="Frequency" prefWidth="100" fx:id="frequencyColumn"/>
                                <TableColumn text="Streak" prefWidth="80" fx:id="streakColumn"/>
                                <TableColumn text="Last Completed" prefWidth="120" fx:id="lastCompletedColumn"/>
                                <TableColumn text="Actions" prefWidth="150" fx:id="actionsColumn"/>
                            </columns>
                        </TableView>
                        
                        <!-- Empty State -->
                        <Label fx:id="emptyLabel" text="No habits yet. Create one to get started!" 
                               style="-fx-text-fill: #7f8c8d; -fx-font-size: 13; -fx-alignment: center;"/>
                    </VBox>
                    
                    <!-- Habit Statistics Section -->
                    <VBox spacing="15" style="-fx-border-color: #ddd; -fx-border-width: 1; 
                                              -fx-padding: 20; -fx-background-color: white;
                                              -fx-border-radius: 8;">
                        <Label text="Statistics" 
                               style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                        
                        <GridPane hgap="20" vgap="10">
                            <!-- Total Habits -->
                            <VBox spacing="5" style="-fx-padding: 15; -fx-background-color: #e8f4f8; -fx-border-radius: 5;">
                                <Label text="Total Habits" style="-fx-font-size: 12; -fx-text-fill: #7f8c8d;"/>
                                <Label fx:id="totalHabitsLabel" text="0" 
                                       style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #3498db;"/>
                                <GridPane.setColumnIndex>0</GridPane.setColumnIndex>
                                <GridPane.setRowIndex>0</GridPane.setRowIndex>
                            </VBox>
                            
                            <!-- Best Streak -->
                            <VBox spacing="5" style="-fx-padding: 15; -fx-background-color: #f0f5e9; -fx-border-radius: 5;">
                                <Label text="Best Streak" style="-fx-font-size: 12; -fx-text-fill: #7f8c8d;"/>
                                <Label fx:id="bestStreakLabel" text="0 days" 
                                       style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
                                <GridPane.setColumnIndex>1</GridPane.setColumnIndex>
                                <GridPane.setRowIndex>0</GridPane.setRowIndex>
                            </VBox>
                            
                            <!-- Average Completion -->
                            <VBox spacing="5" style="-fx-padding: 15; -fx-background-color: #fef5e7; -fx-border-radius: 5;">
                                <Label text="Avg. Completion" style="-fx-font-size: 12; -fx-text-fill: #7f8c8d;"/>
                                <Label fx:id="avgCompletionLabel" text="0%" 
                                       style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #f39c12;"/>
                                <GridPane.setColumnIndex>2</GridPane.setColumnIndex>
                                <GridPane.setRowIndex>0</GridPane.setRowIndex>
                            </VBox>
                        </GridPane>
                    </VBox>
                    
                </VBox>
            </content>
        </ScrollPane>
    </center>
    
</BorderPane>
